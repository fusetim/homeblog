---
import BasePage from "../../layouts/base/BasePage.astro";
import { APP_NAME, APP_DESCRIPTION } from "../../constants";
import MdiRightArrow from "~icons/mdi/chevron-right";
import PostCard from "../../components/PostCard.astro";
import type { Props as PostCardProps } from "../../components/PostCard.astro";
import { getAllBlogPosts, getPostLink, getBlogPostReadTime, getBlogPostWordCount } from "../../libs/posts";


const latestPosts : PostCardProps[] = await getAllBlogPosts().then((posts) => {
    return posts
        .map((post) => ({
            title: post.title,
            description: post.description,
            date: post.publication_date,
            tags: post.tags,
            link: getPostLink(post),
            wordCount: getBlogPostWordCount(post) ?? undefined,
            readTime: getBlogPostReadTime(post) ?? undefined,
        }));
});
---

<BasePage
	title={APP_NAME}
	description={APP_DESCRIPTION}
>
	<main class="container">
		<section id="blog">
			<h3>Last posts</h3>
			<div class="posts">
				{latestPosts.map((post) => (
					<PostCard
						{...post}
					/>
				))}
			</div>
			<a href="#blog" class="btn more">
				<span>More posts</span>
				<MdiRightArrow></MdiRightArrow>
			</a>
		</section>
	</main>
</BasePage>

<style lang="scss">
	section {
		margin: 4rem 0.5rem;

		h3 {
			font-size: 1.75rem;
			margin-bottom: 1rem;
		}
	}

	.posts {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1rem;
	}
	.btn.more {
		display: flex;
		align-items: center;
		justify-content: center;

		padding: 0.5rem 0.5rem 0.5rem 1rem;
		margin: 1rem auto;

		border-radius: 8px;
		border: 1px solid #ccc;
		background-color: #f9f9f9;
		outline: 1px solid transparent;

		width: fit-content;

		font-size: 0.8rem;
		text-transform: uppercase;
		font-weight: 600;

		transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out, outline-color 0.2s ease-in-out;

		@media (max-width: 600px) {
			width: 100%;
		}
	}
	.btn.more:hover {
		background-color: #f7f8fb;
		outline-color: #3d66bf;
		border-color: #3d66bf;
		color: #0d1f48;
		svg {
			transform: translateX(0.25rem);
		}
	}
	.btn.more svg {
		margin-left: 0.5rem;
		transition: transform 0.2s ease-in-out;
	}
	a.btn {
		text-decoration: none;
		color: inherit;
	}
</style>